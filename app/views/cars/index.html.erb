<div class="wrap">
   <div class="search">
      <input type="text" class="searchTerm" placeholder="Which brand are you looking for?">
      <button type="submit" class="searchButton">
        <i class="fa fa-search"></i>
     </button>
   </div>
</div>
<style>
    .card-custom {
        max-width: 250px;
    }
</style>
<div class="container mt-5">
  <div class="d-flex justify-content-between flex-wrap" style="padding-top: 85px;">
    <% @cars.each do |car| %>
      <div class="card card-custom">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1556448851-9359658faa54?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1770&q=80" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to car.brand, car_path(car) %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class = "button-container d-flex justify-content-center">
  <button type="button" class="btn btn-success"><%= link_to "Add a car", new_car_path(@car) %></button>
</div>
